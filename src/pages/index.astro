<Layout title="Home">
  <!-- Hero Section -->
  <section class="py-12 md:py-20">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
      <div>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight">
          Discover the World of <span class="bg-clip-text text-primary bg-gradient-to-r">VTubers</span>
        </h1>
        <p class="text-xl text-slate-600 dark:text-slate-400 mt-6 mb-8">
          Your ultimate guide to virtual entertainers. Stay updated with the latest news, discover new talents, and explore the growing VTuber ecosystem.
        </p>
        <div class="flex flex-wrap gap-4">
          <a href="/directory" class="btn-secondary">
            <Icon name="search" class="w-5 h-5 mr-2" />
            Explore Directory
          </a>
          <a href="/news" class="btn-secondary">
            <Icon name="newspaper" class="w-5 h-5 mr-2" />
            Latest News
          </a>
        </div>
      </div>
      <div class="relative">
        <div class="absolute -z-10 top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[120%] h-[120%] rounded-full bg-gradient-to-r from-primary/20 to-secondary/20 blur-3xl"></div>
        <img 
          src="/placeholder.svg?height=600&width=600" 
          alt="VTuber Illustration" 
          class="w-full h-auto rounded-xl"
        />
      </div>
    </div>
  </section>
  
  <!-- Latest News Section -->
  <section class="py-12 md:py-16">
    <div class="flex justify-between items-center mb-8">
      <h2 class="text-2xl md:text-3xl font-bold">Latest News</h2>
      <a href="/news" class="text-primary dark:text-primary-light font-medium hover:underline flex items-center">
        View All
        <Icon name="arrow-right" class="w-4 h-4 ml-1" />
      </a>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {featuredNews.map(news => (
        <NewsCard {...news} />
      ))}
    </div>
  </section>
  
  <!-- Categories Section -->
  <section class="py-12 md:py-16 bg-slate-50 dark:bg-slate-800/50 -mx-4 px-4">
    <div class="container mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-2xl md:text-3xl font-bold mb-4">Browse by Category</h2>
        <p class="text-slate-600 dark:text-slate-400 max-w-2xl mx-auto">
          Explore VTubers by their content focus and find exactly what you're looking for
        </p>
      </div>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {popularCategories.map(category => (
          <CategoryCard {...category} />
        ))}
      </div>
      
      <div class="text-center mt-8">
        <a href="/categories" class="btn-primary">
          View All Categories
        </a>
      </div>
    </div>
  </section>
  
  <!-- Featured VTuber Section -->
  <section class="py-12 md:py-16">
    <div class="mb-12">
      <h2 class="text-2xl md:text-3xl font-bold mb-4">Featured VTuber</h2>
      <div class="h-1 w-20 bg-gradient-to-r from-primary to-secondary rounded-full"></div>
    </div>
    
    <FeaturedVTuber {...featuredVTuber} />
  </section>
  
  <!-- Trending VTubers Section -->
  <section class="py-12 md:py-16">
    <div class="flex justify-between items-center mb-8">
      <h2 class="text-2xl md:text-3xl font-bold">Trending VTubers</h2>
      <a href="/directory" class="text-primary dark:text-primary-light font-medium hover:underline flex items-center">
        View All
