---

<Layout title="Latest VTuber News">
  <div class="max-w-4xl mx-auto">
    <h1>VTuber News</h1>
    <p class="text-xl text-slate-600 dark:text-slate-400 mb-8">
      Stay updated with the latest news, announcements, and events from the VTuber world.
    </p>
    
    <!-- Categories Filter -->
    <div class="flex flex-wrap gap-2 mb-8">
      {newsCategories.map(category => (
        <a 
          href={category === "All" ? "/news" : `/news/category/${category.toLowerCase()}`}
          class={`px-4 py-2 rounded-full text-sm font-medium transition-colors ${
            category === "All" 
              ? "bg-primary text-white hover:bg-primary/90" 
              : "bg-slate-100 text-slate-800 hover:bg-slate-200 dark:bg-slate-700 dark:text-slate-200 dark:hover:bg-slate-600"
          }`}
        >
          {category}
        </a>
      ))}
    </div>
    
    <!-- Search Bar -->
    <div class="relative mb-8">
      <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
        <Icon name="search" class="w-5 h-5 text-slate-400" />
      </div>
      <input 
        type="search" 
        placeholder="Search news articles..." 
        class="w-full pl-10 pr-4 py-3 rounded-lg border border-slate-300 dark:border-slate-600 bg-white dark:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-primary"
      />
    </div>
  </div>
  
  <!-- News Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    {newsArticles.map(article => (
      <NewsCard {...article} />
    ))}
  </div>
  
  <!-- Pagination -->
  <div class="flex justify-center mt-12">
    <nav class="inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
      <a
        href="#"
        class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-slate-300 dark:border-slate-600 bg-white dark:bg-slate-800 text-sm font-medium text-slate-500 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-slate-700"
      >
        <span class="sr-only">Previous</span>
        <Icon name="chevron-left" class="h-5 w-5" />
      </a>
      <a
        href="#"
        aria-current="page"
        class="relative inline-flex items-center px-4 py-2 border border-primary bg-primary text-sm font-medium text-white"
      >
        1
      </a>
      <a
        href="#"
        class="relative inline-flex items-center px-4 py-2 border border-slate-300 dark:border-slate-600 bg-white dark:bg-slate-800 text-sm font-medium text-slate-700 dark:text-slate-300 hover:bg-slate-50 dark:hover:bg-slate-700"
      >
        2
      </a>
      <a
        href="#"
        class="relative inline-flex items-center px-4 py-2 border border-slate-300 dark:border-slate-600 bg-white dark:bg-slate-800 text-sm font-medium text-slate-700 dark:text-slate-300 hover:bg-slate-50 dark:hover:bg-slate-700"
      >
        3
      </a>
      <span class="relative inline-flex items-center px-4 py-2 border border-slate-300 dark:border-slate-600 bg-white dark:bg-slate-800 text-sm font-medium text-slate-700 dark:text-slate-300">
        ...
      </span>
      <a
        href="#"
        class="relative inline-flex items-center px-4 py-2 border border-slate-300 dark:border-slate-600 bg-white dark:bg-slate-800 text-sm font-medium text-slate-700 dark:text-slate-300 hover:bg-slate-50 dark:hover:bg-slate-700"
      >
        8
      </a>
      <a
        href="#"
        class="relative inline-flex items-center px-4 py-2 border border-slate-300 dark:border-slate-600 bg-white dark:bg-slate-800 text-sm font-medium text-slate-700 dark:text-slate-300 hover:bg-slate-50 dark:hover:bg-slate-700"
      >
        9
      </a>
      <a
        href="#"
        class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-slate-300 dark:border-slate-600 bg-white dark:bg-slate-800 text-sm font-medium text-slate-500 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-slate-700"
      >
        <span class="sr-only">Next</span>
        <Icon name="chevron-right" class="h-5 w-5" />
      </a>
    </nav>
  </div>
</Layout>

