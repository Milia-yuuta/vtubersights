---

<Layout title="VTuber Directory">
  <div class="max-w-4xl mx-auto">
    <h1>VTuber Directory</h1>
    <p class="text-xl text-slate-600 dark:text-slate-400 mb-8">
      Explore our comprehensive directory of VTubers from various agencies and content categories.
    </p>
    
    <div class="grid grid-cols-1 md:grid-cols-[250px_1fr] gap-8">
      <!-- Filters Sidebar -->
      <aside class="space-y-6">
        <div>
          <h3 class="text-lg font-bold mb-3">Agency</h3>
          <div class="space-y-2">
            {agencies.map(agency => (
              <label class="flex items-center gap-2">
                <input 
                  type="radio" 
                  name="agency" 
                  value={agency} 
                  checked={agency === "All"}
                  class="w-4 h-4 text-primary focus:ring-primary"
                />
                <span>{agency}</span>
              </label>
            ))}
          </div>
        </div>
        
        <div>
          <h3 class="text-lg font-bold mb-3">Category</h3>
          <div class="space-y-2">
            {categories.map(category => (
              <label class="flex items-center gap-2">
                <input 
                  type="checkbox" 
                  name="category" 
                  value={category}
                  checked={category === "All"} 
                  class="w-4 h-4 rounded text-primary focus:ring-primary"
                />
                <span>{category}</span>
              </label>
            ))}
          </div>
        </div>
        
        <div>
          <h3 class="text-lg font-bold mb-3">Subscriber Count</h3>
          <div class="space-y-2">
            <label class="flex items-center gap-2">
              <input 
                type="radio" 
                name="subscribers" 
                value="all" 
                checked
                class="w-4 h-4 text-primary focus:ring-primary"
              />
              <span>All</span>
            </label>
            <label class="flex items-center gap-2">
              <input 
                type="radio" 
                name="subscribers" 
                value="1m+"
                class="w-4 h-4 text-primary focus:ring-primary"
              />
              <span>1M+</span>
            </label>
            <label class="flex items-center gap-2">
              <input 
                type="radio" 
                name="subscribers" 
                value="500k-1m"
                class="w-4 h-4 text-primary focus:ring-primary"
              />
              <span>500K - 1M</span>
            </label>
            <label class="flex items-center gap-2">
              <input 
                type="radio" 
                name="subscribers" 
                value="100k-500k"
                class="w-4 h-4 text-primary focus:ring-primary"
              />
              <span>100K - 500K</span>
            </label>
            <label class="flex items-center gap-2">
              <input 
                type="radio" 
                name="subscribers" 
                value="<100k"
                class="w-4 h-4 text-primary focus:ring-primary"
              />
              <span>&lt;100K</span>
            </label>
          </div>
        </div>
        
        <button class="w-full btn-primary">
          Apply Filters
        </button>
        
        <button class="w-full text-sm text-slate-600 dark:text-slate-400 hover:underline">
          Reset Filters
        </button>
      </aside>
      
      <!-- Main Content -->
      <div>
        <!-- Search Bar -->
        <div class="relative mb-6">
          <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
            <Icon name="search" class="w-5 h-5 text-slate-400" />
          </div>
          <input 
            type="search" 
            placeholder="Search VTubers..." 
            class="w-full pl-10 pr-4 py-3 rounded-lg border border-slate-300 dark:border-slate-600 bg-white dark:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-primary"
          />
        </div>
        
        <!-- Sort Options -->
        <div class="flex justify-between items-center mb-6">
          <p class="text-sm text-slate-600 dark:text-slate-400">
            Showing <span class="font-medium">{vtubers.length}</span> results
          </p>
          
          <div class="flex items-center gap-2">
            <label for="sort" class="text-sm">Sort by:</label>
            <select 
              id="sort"
              class="text-sm rounded-lg border border-slate-300 dark:border-slate-600 bg-white dark:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-primary px-3 py-2"
            >
              <option value="popular">Most Popular</option>
              <option value="recent">Recently Added</option>
              <option value="a-z">A-Z</option>
              <option value="z-a">Z-A</option>
            </select>
          </div>
        </div>
        
        <!-- VTubers Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {vtubers.map(vtuber => (
            <VTuberCard {...vtuber} />
          ))}
        </div>
        
        <!-- Pagination -->
        <div class="flex justify-center mt-12">
          <nav class="inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
            <a
              href="#"
              class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-slate-300 dark:border-slate-600 bg-white dark:bg-slate-800 text-sm font-medium text-slate-500 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-slate-700"
            >
              <span class="sr-only">Previous</span>
              <Icon name="chevron-left" class="h-5 w-5" />
            </a>
            <a
              href="#"
              aria-current="page"
              class="relative inline-flex items-center px-4 py-2 border border-primary bg-primary text-sm font-medium text-white"
            >
              1
            </a>
            <a
              href="#"
              class="relative inline-flex items-center px-4 py-2 border border-slate-300 dark:border-slate-600 bg-white dark:bg-slate-800 text-sm font-medium text-slate-700 dark:text-slate-300 hover:bg-slate-50 dark:hover:bg-slate-700"
            >
              2
            </a>
            <a
              href="#"
              class="relative inline-flex items-center px-4 py-2 border border-slate-300 dark:border-slate-600 bg-white dark:bg-slate-800 text-sm font-medium text-slate-700 dark:text-slate-300 hover:bg-slate-50 dark:hover:bg-slate-700"
