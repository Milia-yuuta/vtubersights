---
export interface Props {
  name: string;
  description: string;
  icon: string;
  count: number;
  slug: string;
}

const { name, description, icon, count, slug } = Astro.props;
import { Icon } from 'astro-icon/components';
---

<a href={`/categories/${slug}`} class="card p-6 flex flex-col h-full">
  <div class="w-12 h-12 rounded-lg bg-primary/10 dark:bg-primary/20 flex items-center justify-center mb-4">
    <Icon name={icon} class="w-6 h-6 text-primary dark:text-primary-light" />
  </div>
  <h3 class="text-xl font-bold mb-2">{name}</h3>
  <p class="text-slate-600 dark:text-slate-400 mb-4 flex-grow">{description}</p>
  <div class="flex items-center justify-between">
    <span class="text-sm font-medium text-slate-700 dark:text-slate-300">{count} VTubers</span>
    <span class="text-primary dark:text-primary-light">
      <Icon name="arrow-right" class="w-5 h-5" />
    </span>
  </div>
</a>

